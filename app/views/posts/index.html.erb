<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td class="post_index"><%= post.content %></td>
        <td><% if Like.find_by(user_id: current_user.id, post_id: post.id) %>
            <%= link_to(destroy_likes_path(post),{method: "post"})do%>
          <i class="fas fa-heart unlike-btn"></i>
          <%end%>
            <% else %>
            <%= link_to(create_likes_path(post),{method: "post"})do%>
              <i class="fas fa-heart like-btn"></i>
          <%end%>
        <%end%>
          <%=Like.where(post_id: post.id).count%>
      </td>



        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



