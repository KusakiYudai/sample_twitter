<!DOCTYPE html>
<html>
  <head>
    <title>SampleTwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo-menu">
        <h1 style="padding: 20px;">sample_twitter</h1>

        <ul class="header-menu">
          <li><%= link_to "TOP", root_path %></li>
          <li><%= link_to "投稿一覧", posts_path %></li>
          <li><%= link_to "新規作成", new_post_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        </ul>
      </div>
    </header>

    <div class="wrapper">
      <%= yield %>
    </div>

    <footer>
    </footer>
  </body>
</html>
